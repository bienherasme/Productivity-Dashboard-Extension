{
  "manifest_version": 3,
  "name": "Productivity Dashboard Extension",
  "description": "A Chrome extension that replaces the new tab with a productivity dashboard.",
  "version": "1.0",
  "permissions": ["storage"],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "host_permissions": [
    "https://api.openweathermap.org/data/2.5/*"
  ],
  "action": {
    "default_icon": {
      "16": "to-do-list.png",
      "48": "to-do-list.png",
      "128": "to-do-list.png"
    }
  },
  "icons": {
    "16": "to-do-list.png",
    "48": "to-do-list.png",
    "128": "to-do-list.png"
  }
}
